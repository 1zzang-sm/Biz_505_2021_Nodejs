extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display: flex;
			flex-wrap : wrap;
			justify-content : center;
			align-items : center;
		}
		div.table {
			width : 200px;
			height : 100px;
			border : 1px solid green;
			margin : 10px;
			text-align : center;
			line-height : 100px;
			background-color : #aaa;
			color : white;
			font-weight : bold;
			font-size : 20px;
			cursor:pointer;
		}
		div.order_yes {
			background-color: yellow;
			color: black;
		}
		div.table:hover {
			box-shadow : 2px 2px 2px blue;
		}
	each table, indexl in TABLES
		if(table.order_count > 0)
			div.table.order_yes(data-table_id= table.id) !{table.table_name} 
				span 주문량(!{table.order_count})

		else
			div.table(data-table_id= table.id) !{table.table_name}
	


